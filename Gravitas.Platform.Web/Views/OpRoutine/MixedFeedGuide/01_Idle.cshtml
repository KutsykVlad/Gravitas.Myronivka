@using Gravitas.Model.DomainValue
@using Gravitas.Platform.Web.ViewModel
@model Gravitas.Platform.Web.ViewModel.OpRoutine.MixedFeedGuide.MixedFeedGuideVms.IdleVm
@{
    ViewBag.NodeId = Model.NodeId;
}

@Html.HiddenFor(m => m.NodeId, new { @id = "nodeId" })

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="queue-tab" data-toggle="tab" href="#queue" role="tab" aria-controls="home" aria-selected="true">
            У черзі <span class="badge badge-pill badge-danger" id="mixedfeedguide-register-list-budge"></span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="load-tab" data-toggle="tab" href="#load" role="tab" aria-controls="profile" aria-selected="false">
            На часткове завантаження <span class="badge badge-pill badge-danger" id="rejectedmixedfeedload-register-list-budge"></span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="unload-tab" data-toggle="tab" href="#unload" role="tab" aria-controls="profile" aria-selected="false">
        На часткове розвантаження <span class="badge badge-pill badge-danger" id="rejectedmixedfeedunload-register-list-budge"></span>
        </a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="queue" role="tabpanel" aria-labelledby="home-tab">
        @{ Html.RenderAction(
               "GetRegistry",
               "TicketContainer",
               new {
                   nodeId = Model.NodeId,
                   registerType = TicketRegisterType.MixedFeedGuide,
                   detailActionLink = new ActionLinkVm {
                       NodeId = Model.NodeId,
                       ControllerName = "MixedFeedGuide",
                       ActionName = "Idle_SelectTicketContainer"
                   }
               });
        }
    </div>
    <div class="tab-pane fade" id="load" role="tabpanel" aria-labelledby="home-tab">
        @{ Html.RenderAction(
               "GetRegistry",
               "TicketContainer",
               new {
                   nodeId = Model.NodeId,
                   registerType = TicketRegisterType.RejectedMixedFeedLoad,
                   detailActionLink = new ActionLinkVm {
                       NodeId = Model.NodeId,
                       ControllerName = "MixedFeedGuide",
                       ActionName = "Idle_SelectTicketContainer"
                   }
               });
        }
    </div>
    <div class="tab-pane fade" id="unload" role="tabpanel" aria-labelledby="home-tab">
        @{ Html.RenderAction(
               "GetRegistry",
               "TicketContainer",
               new {
                   nodeId = Model.NodeId,
                   registerType = TicketRegisterType.RejectedMixedFeedUnLoad,
                   detailActionLink = new ActionLinkVm {
                       NodeId = Model.NodeId,
                       ControllerName = "MixedFeedGuide",
                       ActionName = "Idle_SelectTicketContainer"
                   }
               });
        }
    </div>
</div>
