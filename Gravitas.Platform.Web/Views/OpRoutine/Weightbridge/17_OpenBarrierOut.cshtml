@model Gravitas.Platform.Web.ViewModel.WeightbridgeVms.OpenBarrierOutVm
@Html.HiddenFor(m => m.NodeId, new { @id = "nodeId" })

<div class="d-flex align-items-center icon-container">
    <div class="flex-shrink-1"><i class="fas fa-shipping-fast"></i></div>
    <div class="p-3 w-100">
        <h3>Проїзд дозволено</h3>
        <br />
        @if (Model.IsSmsNecessary)
        {
            <h3>Для подальшого продовження маршруту, очікуйте смс повідомлення</h3>
        }
        else
        {
            <h3>Рухайтесь далі згідно з маршруту</h3>
        }
    </div>
</div>
<script>
    stopScaleCountdownTimer();
</script>
