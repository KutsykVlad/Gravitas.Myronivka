@model Gravitas.Platform.Web.ViewModel.WeightbridgeVms.DriverTrailerEnableCheckVm
@Html.HiddenFor(m => m.NodeId, new {id = "nodeId"})

<div class="row justify-content-between">
    <div class="col-sm-6">
        <div style="text-align: center; vertical-align: middle">
            <h5>ВОДІЙ</h5>
        </div>
        @Ajax.ActionLink(@"Зважування з розщепленням", "DriverTrailerEnable_Accept", "Weighbridge", new {nodeId = Model.NodeId, isTrailerAccepted = true}, null, new {@class = "btn btn-danger btn-lg btn-block", style = "height:70px; line-height:50px; font-size: large;" })
    </div>
    <div class="col-sm-6">
        <div style="text-align: center; vertical-align: middle">
            <h5>ВОДІЙ</h5>
        </div>
        @Ajax.ActionLink(@"Зважування без розщеплення", "DriverTrailerEnable_Accept", "Weighbridge", new {nodeId = Model.NodeId, isTrailerAccepted = false}, null, new {@class = "btn btn-success btn-lg btn-block", style = "height:70px; line-height:50px; font-size: large;" })
    </div>
</div>