@using Gravitas.Model.DomainValue
@using Gravitas.Platform.Web.ViewModel
@using Gravitas.Platform.Web.ViewModel.Shared
@model Gravitas.Platform.Web.ViewModel.SingleWindowVms.IdleVm
@Html.HiddenFor(m => m.NodeId, new { @id = "nodeId" })

<div class="d-flex align-items-center icon-container">
    <div class="flex-shrink-1"><i class="fas fa-id-card"></i></div>
    <div class="p-3 w-100"><h3>Піднесіть картку водія до зчитувача</h3></div>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="all-tab" data-toggle="tab" href="#all" role="tab" aria-controls="all" aria-selected="true">
            В обробці 
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pre-tab" data-toggle="tab" href="#pre" role="tab" aria-controls="pre" aria-selected="false">
            Попередня реєстрація 
        </a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
        @{ Html.RenderAction(
               "GetRegistry",
               "TicketContainer",
               new {
                   nodeId = Model.NodeId,
                   registerType = TicketRegisterType.SingleWindow,
                   detailActionLink = new ActionLinkVm {
                       NodeId = Model.NodeId,
                       ControllerName = "SingleWindow",
                       ActionName = "Idle_SelectTicketContainer"
                   }
               });
        }
    </div>
    <div class="tab-pane fade show" id="pre" role="tabpanel" aria-labelledby="pre-tab">
        @{ Html.RenderAction(
               "GetRegistry",
               "TicketContainer",
               new {
                   nodeId = Model.NodeId,
                   registerType = TicketRegisterType.PreRegisterTicketContainerList,
                   detailActionLink = new ActionLinkVm {
                       NodeId = Model.NodeId,
                       ControllerName = "SingleWindow",
                       ActionName = "Idle_SelectPreRegisterTicketContainer"
                   }
               });
        }
    </div>
</div>



