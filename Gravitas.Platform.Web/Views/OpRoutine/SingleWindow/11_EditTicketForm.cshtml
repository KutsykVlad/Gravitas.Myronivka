@model Gravitas.Platform.Web.ViewModel.OpRoutine.SingleWindow.SingleWindowVms.EditTicketFormVm
@Html.HiddenFor(m => m.NodeId, new { @id = "nodeId" })

@using (Ajax.BeginForm("EditTicketForm_Save", "SingleWindow", FormMethod.Post, null,  new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-between">
        <div class="col-md-3 col-sm-6">
            <button type="button" onclick="$.ajax('@Url.Action("EditTicketForm_Back", "SingleWindow", new {nodeId = Model.NodeId})');" class="btn btn-danger btn-lg btn-block">Назад</button>
        </div>
        @if (Model.IsEditable) 
        {
            <div class="col-md-3 col-sm-6">
                <input type="submit" value="Зберегти" class="btn btn-lg btn-primary btn-block" />
            </div>
        }
    </div>

      <div class="mt-4">
          @Html.Partial("~/Views/OpData/SingleWindow/_Detail.cshtml", Model.SingleWindowOpDataDetailVm)
      </div>
}