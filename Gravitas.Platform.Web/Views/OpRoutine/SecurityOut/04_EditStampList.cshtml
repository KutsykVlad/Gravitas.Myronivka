@model Gravitas.Platform.Web.ViewModel.SecurityOutVms.EditStampListVm
@Html.HiddenFor(m => m.NodeId, new { @id = "nodeId" })

<div class="d-flex align-items-center icon-container">
    <div class="flex-shrink-1"><i class="fas fa-id-card"></i></div>
    <div class="p-3 w-100"><h3>Введіть список пломб</h3></div>
</div>

@if (Model.IsTechRoute)
{
    <h4 style="color: red; text-align: center">Увага! Автомобіль з технологічним маршрутом</h4>
}

@using (Ajax.BeginForm("EditStampList", "SecurityOut", FormMethod.Post, null, new { @class = "" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.NodeId, new { @id = "nodeId" })
    
    <div class="form-row">
        <div class="col-md-8 col-sm-6">
            @Html.LabelFor(model => model.StampList, htmlAttributes: new { @class = "" })
        </div>
    </div>
    <div class="form-row">
        <div class="col-12">
            @Html.EditorFor(model => Model.StampList, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StampList, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr/>
    <diw class="row justify-content-between">
        <div class="col-md-3 col-sm-6">
            @Ajax.ActionLink(@"Назад", "EditStampList_Back", "SecurityOut", new { nodeId = Model.NodeId }, null, new { @class = "btn btn-danger btn-lg btn-block" })
        </div>
        <div class="col-md-3 col-sm-6">
            <input type="submit" value="Зберегти" class="btn btn-lg btn-primary btn-block" />
        </div>
    </diw>
}