@model Gravitas.Platform.Web.ViewModel.BlackList.List.BlackListTransportListVm

<div class="container">
    <div class="row justify-content-center">
        <div class="col-3 text-lg-center"> <div class="text-capitalize inline"><h4>Автівки</h4></div></div>
    </div>
    <div class="col-12">
        @if (Model.Items.Count > 0)
        {

            foreach (var item in Model.Items)
            {
                @Html.Partial("Transport/_TransportRecord", item)
            }
        }
        else
        {
            <div class="row">
                <h6>Чорний список автівок пустий</h6>
            </div>
        }
        <div class="row mt-3 mb-3 justify-content-center">
            <div class="col-8">
                <button class="btn btn-primary btn-block" data-toggle="collapse" data-target="#collapse_Transport">Внести запис</button>
            </div>
        </div>
        <div class="collapse mt-2" id="collapse_Transport">
            @Html.Partial("Transport/_TransportRecordEdit", Model.TransportToAdd)
        </div>
    </div>
</div>