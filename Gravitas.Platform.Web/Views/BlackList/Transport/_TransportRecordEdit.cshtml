@model Gravitas.Platform.Web.ViewModel.BlackListTransportRecordVm


@using (Html.BeginForm("AddTransportToBlackList", "BlackList", FormMethod.Post))
{
    <div class="row">
        <div class="col-10">
            @Html.EditorFor(model => model.TransportNumber, new {htmlAttributes = new {@class = "form-control", placeholder = "Номер транспорту:" } })
            @Html.ValidationMessageFor(model => model.TransportNumber, "Введення номера є обов'язковим", new {@class = "text-danger"})
        </div>
        <div class="col-2">

            <button class="btn-primary btn btn-block">Внести</button>
            
        </div>
       
        
    </div>
    <div class="row mt-2">
        <div class="col-10">
            <div class="row">
                @Html.TextAreaFor(model => model.Comment, 3, 1, new { @class = "form-control", @title = "Причина внесення", @placeholder = "Причина внесення" })
                @Html.ValidationMessageFor(model => model.Comment, "Введення причини є обов'язковим", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
