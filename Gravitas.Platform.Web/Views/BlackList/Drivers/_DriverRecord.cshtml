@model Gravitas.Platform.Web.ViewModel.BlackList.Record.BlackListDriverRecordVm

<div class="row mt-1" title="Деталі" data-toggle="popover" data-html="true" data-placement="left" data-content="Причина внесення: <br/> @Model.Comment">
    <div class="col-5">
        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", @readonly = "true" })
    </div>
    <div class="col-6">
        @Html.TextBoxFor(model => model.Comment, new { @class = "form-control", @readonly = "true" })
    </div>
    <div class="col-1">
        @Html.ActionLink("Видалити", "DeleteDriverRecord", "BlackList", new { id = Model.Id }, new { @class = "btn btn-warning" })
    </div>
</div>