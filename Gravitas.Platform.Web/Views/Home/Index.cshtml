@model List<Gravitas.Model.DomainModel.Node.DAO.Node>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">-</th>
            <td><a href="@Url.Action("History", "Ticket")">Історія ТТН</a></td>
        </tr>
        <tr>
            <th scope="row">-</th>
            <td><a href="@Url.Action("LabAverageRates", "Ticket")">Середньодобові показники лабораторії</a></td>
        </tr>
        <tr>
            <th scope="row">-</th>
            <td><a href="@Url.Action("Registry", "NonStandard")">Нестандартні ситуації</a></td>
        </tr>
        <tr>
            <th scope="row">-</th>
            <td><a href="@Url.Action("Index", "SelfServiceLaboratory")">Пункт самообслуговування лабораторії</a></td>
        </tr>
        @foreach (var node in Model)
        {
            <tr>
                <th scope="row">@node.Id</th>
                <td><a href="@Url.Action("Routine", "Node", new { node.Id })">@node.Name</a></td>
            </tr>
        }
    </tbody>
</table>