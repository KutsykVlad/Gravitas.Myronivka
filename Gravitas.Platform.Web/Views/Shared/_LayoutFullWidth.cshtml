@using Gravitas.Platform.Web.ViewModel.Admin.Version
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.NodeName - Gravitas</title>

	@Styles.Render("~/bundles/Content/css")
	@Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/Content/angular-css")
	@Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
	@RenderSection("css_page", false)
</head>
<body>
    <div class="modal-spinner" id="spinner"></div> @* spinner *@
    <header class="mb-0">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto logo">
                    <img src="~/Content/images/logo-wht.png"/>
                </div>
                <div class="col text-right">
                    <h4>
                        <span id="pageRefresh" onclick="reloadPage()">@ViewBag.NodeName</span>
                    </h4>
                    <small>
                        <span id="time"></span>
                    </small>
                    <small>@ViewBag.NodeCode</small>
                </div>
            </div>
        </div>
    </header>

<div class="ml-5 mr-5 body-content mt-3">
    @RenderBody()
</div>

    <footer class="w-100">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <span class="pr-3">&copy; @DateTime.Now.Year ВКФ Булат</span>Gravitas @typeof(VersionVm).Assembly.GetName().Version.ToString()
                </div>
                <div class="col-auto logo">
                    <img src="~/Content/images/bulat.png" />
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/signalr/hubs"></script> <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/Scripts/signalr/utils.js"></script>
    <script src="~/Scripts/manual-reload/manual-reload.js"></script>
    <script src="~/Scripts/spinner/spinner.js"></script>
    <script src="~/Scripts/check-actual-data/check-actual.data.v.1.0.0.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
