@using Gravitas.Platform.Web.ViewModel
@using SingleWindowVms = Gravitas.Platform.Web.ViewModel.OpRoutine.SingleWindow.SingleWindowVms
@model Gravitas.Platform.Web.ViewModel.OpRoutine.SingleWindow.SingleWindowVms.ProductContentListVm


@if (Model?.Items?.Any() != true)
{
    <div class="jumbotron">
        <h4>Cклад продукції не визначено</h4>
    </div>
}
else
{
    //<h4 class="mb-3">Склад продукції</h4>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().No)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().OrderNumber)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().UnitName)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (SingleWindowVms.ProductContentItemVm item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.No)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitName)
                </td>
            </tr>
        }
        </tbody>
    </table>
}