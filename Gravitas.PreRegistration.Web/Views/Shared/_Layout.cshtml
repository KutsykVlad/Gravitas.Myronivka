<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  -Gravitas</title>
    @Styles.Render("~/bundles/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/Content/angular-css")
    @Scripts.Render("~/bundles/Content/angular-css")


    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularapp")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("css_page", false)

    @*<script src="~/wwwroot/src/apps/register/appRegister.js"></script>
        <script src="~/wwwroot/src/apps/register/registerService.js"></script>
        <script src="~/wwwroot/src/apps/register/registerController.js"></script>*@
</head>
<body>
<header class="mb-0">
    <div class="container">
        <div class="row align-items-center" >
            <div class="col-auto logo">
                <img src="~/Content/images/logo-wht.png"/>
            </div>
            <div class="col text-right" style="color:white">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</header>

<div ng-app="registerApp" class="container body-content">
    @RenderBody()
</div>

<footer class="w-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <span class="pr-3">&copy; @DateTime.Now.Year ВКФ Булат</span>Gravitas
            </div>
            <div class="col-auto logo">
                <img src="~/Content/images/bulat.png" />
            </div>
        </div>
    </div>
</footer>
@RenderSection("scripts", required: false)
</body>
</html>